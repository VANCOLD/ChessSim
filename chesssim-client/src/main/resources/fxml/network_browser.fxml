<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="at.chess.chesssimulator.controller.NetworkBrowserController"
      spacing="10" style="-fx-padding: 20; -fx-alignment: center;">
    <Label text="Available Game Rooms:" />
    <ListView fx:id="gameListView" prefWidth="300" prefHeight="200" />
    <Button fx:id="hostGame" text="Host Game" onAction="#hostGame" />
    <Button fx:id="joinGame" text="Join Game" onAction="#joinGame" />
</VBox>
